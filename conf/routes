# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomePage.index

GET     /game/:id                   controllers.Game.index(id: String)
GET     /game/:id/osm               controllers.Game.osm(id: String)
POST    /game/:id/osm               controllers.Game.osm(id: String)
GET     /game/:id/data              controllers.Game.data(id: String)
POST    /game/:id/data              controllers.Game.data(id: String)

GET     /tiles/:z/:x/:y             controllers.Tiles.get(z: Int, x: Int, y: Int)

GET     /admin                      controllers.Admin.index
GET     /admin/datastore            controllers.Admin.datastore(db: String)
GET     /admin/rebuild/:db          controllers.Admin.rebuild(db: String)
GET     /admin/logs                 controllers.Admin.logs
GET     /admin/find                 controllers.Admin.find(db: String, coll: String, filter: Option[String], ops: Option[String])

GET     /newsletter                 controllers.Newsletter.index
GET     /newsletter/add             controllers.Newsletter.add(contentType: String, url: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
