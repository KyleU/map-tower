# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomePage.index

GET     /sandbox/rebuildMaps        controllers.Sandbox.rebuildMaps
GET     /sandbox/rebuildOsm         controllers.Sandbox.rebuildOsm
GET     /sandbox/mapTest            controllers.Sandbox.mapTest

GET     /sandbox/test/osm           controllers.Sandbox.osmDataTest
POST    /sandbox/test/osm           controllers.Sandbox.osmDataTest

GET     /sandbox/test/data          controllers.Sandbox.dataTest
POST    /sandbox/test/data          controllers.Sandbox.dataTest

GET     /tiles/:z/:x/:y             controllers.Tiles.get(z:Int, x:Int, y:Int)

GET     /admin                      controllers.Default.todo

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
